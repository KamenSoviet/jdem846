<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="us.wthr.jdem846ui.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Perspective"
            class="us.wthr.jdem846ui.Perspective"
            id="jDem846UI.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      
      <view
            name="Data Sources"
            allowMultiple="false"
            icon="icons/eclipse/sundial.gif"
            class="us.wthr.jdem846ui.views.data.DataView"
            id="jdem846ui.dataView" />
      
      <view
            name="Log Console"
            class="us.wthr.jdem846ui.views.LogConsoleView"
            id="jdem846ui.logConsoleView"
            icon="icons/eclipse/console_view.gif" />
            
      <view
            name="Model Configuration"
            allowMultiple="false"
            class="us.wthr.jdem846ui.views.modelconfig.ModelConfigurationView"
            id="jdem846ui.modelConfigurationView"
            icon="icons/eclipse/configure.gif" />
      
      <view
            name="Preview"
            class="us.wthr.jdem846ui.views.preview.PreviewView"
            id="jdem846ui.previewView" 
            icon="icons/eclipse/globe2.gif"/>
      
      <view
            name="Region Overview"
            class="us.wthr.jdem846ui.views.RegionOverviewView"
            id="jdem846ui.regionOverviewView" />
      
      <view
            name="Rendered Model Display"
            class="us.wthr.jdem846ui.views.models.RenderedModelDisplayView"
            id="jdem846ui.renderedModelDisplayView"
            icon="icons/eclipse/gallery_view.gif" />
     
      <view
            name="Rendered Model List"
            class="us.wthr.jdem846ui.views.models.RenderedModelListView"
            id="jdem846ui.renderedModelListView" />
     
      <view
            name="Rendered Model Properties"
            class="us.wthr.jdem846ui.views.models.RenderedModelPropertiesView"
            id="jdem846ui.renderedModelPropertiesView" 
            icon="icons/eclipse/message_info.gif" />
     
     <view
            name="Script Editor"
            class="us.wthr.jdem846ui.views.ScriptEditorView"
            id="jdem846ui.scriptEditorView"
            icon="icons/eclipse/scroll.png" />
     
     
     
   </extension>
