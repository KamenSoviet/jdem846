  <extension
         point="org.eclipse.ui.commands">
      <category
            name="jDem846"
            id="jdem846ui.category">
      </category>
      <command
            name="New Project"
            description="Creates a new project"
            categoryId="jdem846ui.category"
            id="jdem846ui.project.new">
      </command>
      <command
            name="Open Project"
            description="Opens a project"
            categoryId="jdem846ui.category"
            id="jdem846ui.project.open">
      </command>
  </extension>
